@{
}

<link rel="stylesheet" href="~/css/BookEdit.css">

<h1>Type new info.</h1>
<div class="form-div">
    <form asp-controller="Book" asp-action="Edit" method="post">
        @if (ViewData["TitleRepeatingError"] != null || (string)ViewData["TitleRepeatingError"] != "")
        {
            <span class="text-danger">@ViewData["TitleRepeatingError"]</span>
        }
        @if (ViewData["ShortTitle"] != null || (string)ViewData["ShortTitle"] != "")
        {
            <span class="text-danger">@ViewData["ShortTitle"]</span>
        }

        <label for="title">Title</label>
        <input type="text" name="title" value="@Model.Title">

        <label for="genre">Genre</label>
        <input type="text" name="genre" value="@Model.Genre">

        <label for="year">Year</label>
        <input type="number" name="year" value="@Model.Year">

        <label for="pages">Pages</label>
        <input type="number" name="pages" value="@Model.Pages">

        @*<label for="inspiredBy">Inspired by</label>*@
        @*<input type="text" name="inspiredBy">*@

        <button type="submit" asp-route-id="@Model.Id">Change</button>
        <button class="cancel-button" asp-controller="Book" asp-action="Books">Cancel</button>
    </form>
</div>
