@{
}

<link href="~/css/ProfilePage.css" rel="stylesheet" />

<article id="change-user-data">
    <form asp-controller="User" asp-action="EditUser" method="post">
        @if (ViewData["InvalidName"] != null || (string)ViewData["InvalidName"] != "")
        {
            <span class="text-danger">@ViewData["InvalidName"]</span>
        }
        <label for="UserName">User name</label>
        <input class="new-data" type="text" name="userName" id="UserName">

        <label for="first-name">First name</label>
        <input class="new-data" type="text" name="firstName" id="first-name">

        <label for="last-name">Middle name</label>
        <input class="new-data" type="text" name="middleName" id="middle-name">

        <label for="last-name">Last name</label>
        <input class="new-data" type="text" name="lastName" id="last-name">

        <button type="submit" class="submit-data">Change</button>
    </form>
</article>