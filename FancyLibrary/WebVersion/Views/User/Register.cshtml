@{
}

<link rel="stylesheet" href="~/css/RegisterPage.css" />

<h1>Register</h1>
<form asp-controller="User" asp-action="Register" method="post">
    @if (ViewData["ExistingUserError"] != null || (string)ViewData["ExistingUserError"] != "")
    {
        <span class="text-danger">@ViewData["ExistingUserError"]</span>
    }
    @if (ViewData["MissingUsername"] != null || (string)ViewData["MissingUsername"] != "")
    {
        <span class="text-danger">@ViewData["MissingUsername"]</span>
    }
    @if (ViewData["InvalidInput"] != null || (string)ViewData["InvalidInput"] != "")
    {
        <span class="text-danger">@ViewData["InvalidInput"]</span>
    }
    <label for="username">
        <span class="label-text">Username</span>
        <input type="text" name="Username" id="username" autofocus>
    </label><br>

    @if (ViewData["NotMatchingPasswordsError"] != null || (string)ViewData["NotMatchingPasswordsError"] != "")
    {
        <span class="text-danger">@ViewData["NotMatchingPasswordsError"]</span>
    }
    @if (ViewData["PasswordErrors"] != null || (string)ViewData["PasswordErrors"] != "")
    {
        <span class="text-danger">@ViewData["PasswordErrors"]</span>
    }
    <label for="password">
        <span class="label-text">Password</span>
        <input type="password" name="password" id="password">
    </label><br>

    <label for="confirmPassword">
        <span class="label-text">Confirm password</span>
        <input type="password" name="confirmPassword" id="confirmPassword">
    </label><br>

    @if (ViewData["MissingFirstName"] != null || (string)ViewData["MissingFirstName"] != "")
    {
        <span class="text-danger">@ViewData["MissingFirstName"]</span>
    }
    <label for="first-name">
        <span class="label-text">First name</span>
        <input type="text" name="firstName" id="first-name">
    </label><br>

    @if (ViewData["MissingLastName"] != null || (string)ViewData["MissingLastName"] != "")
    {
        <span class="text-danger">@ViewData["MissingLastName"]</span>
    }
    <label for="last-name">
        <span class="label-text">Last name</span>
        <input type="text" name="lastName" id="last-name">
    </label><br>

    @if (ViewData["MissingBirthday"] != null || (string)ViewData["MissingBirthday"] != "")
    {
        <span class="text-danger">@ViewData["MissingBirthday"]</span>
    }
    @if (ViewData["TooYoung"] != null || (string)ViewData["TooYoung"] != "")
    {
        <span class="text-danger">@ViewData["TooYoung"]</span>
    }
    <label for="birthday">
        <span class="label-text">Birthday</span>
        <input type="date" name="birthday" id="birthday">
    </label><br>

    <button type="submit">Register</button>
    <button type="reset">Reset</button>
</form>